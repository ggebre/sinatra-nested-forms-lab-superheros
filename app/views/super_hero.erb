<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Heroes</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
    </head>
    <body>
        <h1>Create a Team and Heroes!</h1>
        <form action="/teams" method="POST">
            <p>Team Name: <input type="text" name=team[name]></p>
            <p>Team Motto: <input type="text" name=team[motto]></p>
            <% (1..3).each do |num| %>
                <h2>Hero <%=num%></h2>
                <p>Hero's Name: <input type="text" id="member<%=num%>_name" name=team[members][][name]></p>
                <p>Hero's power: <input type="text" id="member<%=num%>_power" name=team[members][][power]></p>
                <p>Hero's Biography: <input type="text" id="member<%=num%>_bio" name=team[members][][bio]></p>
                
            <% end %>
            <button>submit</button>

            </form>
    </body>
</html>
